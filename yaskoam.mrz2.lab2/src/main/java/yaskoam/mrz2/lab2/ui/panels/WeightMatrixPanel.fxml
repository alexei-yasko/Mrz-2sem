<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.TextArea?>

<fx:root type="yaskoam.mrz2.lab2.ui.panels.WeightMatrixPanel" xmlns:fx="http://javafx.com/fxml/1"
         stylesheets="/yaskoam/mrz2/lab2/ui/customStyle.css">

    <SplitPane dividerPositions="0.5" focusTraversable="true" VBox.vgrow="ALWAYS">

        <AnchorPane>
            <TitledPane animated="false" text="First weight matrix" textOverrun="ELLIPSIS" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <TextArea fx:id="weightMatrix1TextArea" editable="false" wrapText="false"/>
            </TitledPane>
        </AnchorPane>

        <AnchorPane>
            <TitledPane animated="false" text="Second weight matrix" textOverrun="ELLIPSIS" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <TextArea fx:id="weightMatrix2TextArea" editable="false" wrapText="false"/>
            </TitledPane>
        </AnchorPane>

    </SplitPane>

</fx:root>